{
  "name": "@decocms/sql-collection-helpers",
  "version": "0.1.0",
  "type": "module",
  "description": "Dynamic MCP tool generation from SQL database schemas with support for PostgreSQL and SQLite",
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@decocms/bindings": "workspace:*",
    "@decocms/runtime": "workspace:*",
    "better-sqlite3": "^11.8.0",
    "postgres": "^3.4.5",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.24.4"
  },
  "main": "./dist/index.js",
  "types": "./src/index.ts",
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "types": "./src/index.ts",
      "default": "./dist/index.js"
    }
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vitest": "3.2.4"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
