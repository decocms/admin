{
  "name": "@decocms/docs",
  "version": "1.0.0",
  "description": "DecoCMS documentation",
  "scripts": {
    "dev": "concurrently \"bun run dev:client\" \"NODE_ENV=development bun --hot run server/main.ts\"",
    "dev:client": "astro dev",
    "dev:tunnel": "deco link -p 3000 -- bun run dev",
    "build": "bun run build:client && bun run build:server",
    "build:client": "astro build",
    "check": "tsc --noEmit",
    "build:server": "NODE_ENV=production bun build server/main.ts --target=bun --outfile=dist/server/main.js",
    "gen": "deco gen --output=shared/deco.gen.ts",
    "astro": "astro"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/mdx": "^4.3.1",
    "@astrojs/react": "^4.3.0",
    "@tailwindcss/vite": "^4.0.7",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "astro": "^5.6.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.525.0",
    "react": "^19.2.0",
    "react-dom": "^19.1.0",
    "rehype-mdx-code-props": "^3.0.1",
    "sharp": "^0.34.2",
    "shiki": "^3.8.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.0.7",
    "typescript": "^5.9.3",
    "@decocms/runtime": "workspace:*",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "concurrently": "^9.2.1",
    "deco-cli": "^0.28.0",
    "typescript": "^5.9.3",
    "wrangler": "^4.40.3"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
