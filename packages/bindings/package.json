{
  "name": "@decocms/bindings",
  "version": "0.2.1",
  "type": "module",
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "json-schema-diff": "^1.0.0",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.24.4",
    "zod-from-json-schema": "^0.0.5",
    "@modelcontextprotocol/sdk": "^1.20.2"
  },
  "main": "./dist/node/index.js",
  "types": "./dist/node/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./dist/index.js"
    },
    "./models": {
      "types": "./src/well-known/models.ts",
      "default": "./dist/models.js"
    },
    "./collections": {
      "types": "./src/well-known/collections.ts",
      "default": "./dist/collections.js"
    },
    "./llm": {
      "types": "./src/well-known/language-model.ts",
      "default": "./dist/language-model.js"
    },
    "./connection": {
      "types": "./src/core/connection.ts",
      "default": "./dist/connection.js"
    },
    "./client": {
      "types": "./src/core/client/index.ts",
      "default": "./dist/client.js"
    },
    "./agents": {
      "types": "./src/well-known/agents.ts",
      "default": "./dist/agents.js"
    }
  },
  "devDependencies": {
    "esbuild-plugin-polyfill-node": "^0.3.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vitest": "3.2.4"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
